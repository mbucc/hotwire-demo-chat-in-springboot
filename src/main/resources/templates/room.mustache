{{> head}}

{{#notice}}<p id="notice">{{notice}}</p>{{/notice}}


<turbo-frame id="room">
  <h1>Room {{room.name}}</h1>

  <p>
    <a href="/rooms/{{room.id}}/edit">Edit</a>
    <a href="/rooms" data-turbo-frame="_top">Back</a>
  </p>
</turbo-frame>

<div id="messages">
  {{#messages}}
    {{> message}}
  {{/messages}}
</div>

<a href="/rooms/{{room.id}}/messages/new">New message</a>

{{> tail}}
